{
  "compilerOptions": {
    "target": "ES2022", 
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node" // Permite resolver .ts como m√≥dulos
  },
  "include": ["src/**/*"]
}
